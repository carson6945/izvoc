/* pages/add/vclist/vclist.wxss */
.list{
  padding: 10rpx;
  display: flex;
  justify-content: space-between;
}
.list>view{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}
.mean{
  text-align: left;
}
.ac{
  /* background: red; */
  padding-left: 3vw;
}
page{
  overflow-y:hidden;
}
scroll-view{
  overflow-y:scroll;
}
#bottombar{
  height: 9vh;
  bottom: 0px;
  display: flex;
  border-top: 1rpx #ccc solid; 
  padding-bottom: 1vh; 
  justify-content: space-around;
}
#bottombar>image{
  height: 5vh;
  width: 5vh;
  margin-top: 2vh;
}
#bottombar>button{
  font-size: small;
  height: 7vh;
  max-height: 7vh;
  margin-top: 1vh;
}
#topbar{
  height: 5vh;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: small;
  background: #f1f1f1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: relative;
}
#topbar>text{
   position: absolute;
   right: 1vw;
   top: 0;
   display: flex;
   height: 100%;
   align-items: center;
}
